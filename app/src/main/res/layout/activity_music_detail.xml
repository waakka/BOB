<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 背景layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <ImageView 
            android:id="@+id/iv_bg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <!-- 控件layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/tran_black" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp" >
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/tran_black"
                    android:src="@mipmap/arr_down" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TxtTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="口是心非"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_artist"
                style="@style/TxtTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:text="张雨生"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_mode_nolrc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/ib_perious2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_perious" />

                    <ImageButton
                        android:id="@+id/ib_play2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_pause" />

                    <ImageButton
                        android:id="@+id/ib_next2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_next" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_cur_time2"
                        style="@style/TxtCaption"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="00:00"
                        android:textColor="@color/white" />

                    <SeekBar
                        android:id="@+id/sb_progress2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_time2"
                        style="@style/TxtCaption"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="04:56"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mode_lrc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/tv_cur_time1"
                        style="@style/TxtCaption"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="03:36"
                        android:textColor="@color/white" />

                    <SeekBar
                        android:id="@+id/sb_progress1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/tv_time1"
                        style="@style/TxtCaption"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="04:56"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_lrc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/no_lrc"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/ib_perious1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_perious_s" />

                    <ImageButton
                        android:id="@+id/ib_play1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_pause_s" />

                    <ImageButton
                        android:id="@+id/ib_next1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/tran"
                        android:src="@mipmap/logo_next_s" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp" >

                <ImageButton
                    android:id="@+id/ib_play_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:background="@color/tran"
                    android:padding="10dp"
                    android:src="@mipmap/play_mode_circle" />

                <TextView
                    android:id="@+id/tv_lrc_mode"
                    style="@style/TxtCaption"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:text="@string/show_lrc"
                    android:textColor="@color/white" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="36dp"
                    android:background="@color/tran"
                    android:padding="10dp"
                    android:src="@mipmap/logo_music_list_white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>