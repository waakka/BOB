<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_frag"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/ib_back"
                android:src="@mipmap/btn_back"
                android:background="@color/tran"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Integral_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_title" />


    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:text="所有记录"></Spinner>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cur_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/gray_dark"
            android:text="本月记录"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"></LinearLayout>

<ListView
    android:id="@+id/lv_integral_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@null">

</ListView>

</LinearLayout>
