<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_coupon_left"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="@drawable/bg_coupon_left1">
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未使用"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/tv_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20元"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/green"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_coupon_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="@drawable/bg_coupon_right1">
                <TextView
                    android:id="@+id/tv_sid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编码：1"
                    android:textColor="@color/txt_black"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/tv_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mam"
                    android:textColor="@color/txt_black"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_coupon_bottpom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/bg_coupon_bottom1"
            android:gravity="center_vertical"
            android:layout_marginTop="-1dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/youhui2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/tv_term_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2016-09-06"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
