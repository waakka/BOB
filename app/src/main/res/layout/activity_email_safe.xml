<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_frag"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green" >

        <ImageButton
            android:id="@+id/ib_back"
            android:src="@mipmap/btn_back"
            android:background="@color/tran"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_security_mailbox"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_title" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:text="@string/mailwarmming"
        android:paddingLeft="16dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="#cccccc"
        android:textColor="#999999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <EditText
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/et_email" />
        <Button
            android:id="@+id/btn_code"
            android:text="@string/verification_code"
            android:background="@drawable/bg_btn_code"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:layout_width="120dp"
            android:layout_height="32dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"
        />
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <EditText
            android:hint="@string/email_code"
            android:inputType="number"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/et_code" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"
        />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/binding"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_login"
        android:layout_margin="16dp"/>


</LinearLayout>
